{
  "info": {
    "name": "GoRest API Test",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Scenario 1 - Create New User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{auth_token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"name\": \"Athique\",\n    \"gender\": \"male\",\n    \"email\": \"athiqueg_{{timestamp}}@yahoo.com\",\n    \"status\": \"active\"\n}"
        },
        "url": {
          "raw": "https://gorest.co.in/public/v2/users",
          "protocol": "https",
          "host": [
            "gorest",
            "co",
            "in"
          ],
          "path": [
            "public",
            "v2",
            "users"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "pm.test(\"ID is numeric\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(typeof jsonData.id).to.eql(\"number\");",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Scenario 2 - Check First User Status",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "https://gorest.co.in/public/v2/users",
          "protocol": "https",
          "host": [
            "gorest",
            "co",
            "in"
          ],
          "path": [
            "public",
            "v2",
            "users"
          ]
        }
      },
      "response": [],
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"First user status is either active or inactive\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect([\"active\", \"inactive\"]).to.include(jsonData[0].status);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}